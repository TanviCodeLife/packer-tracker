@{
  Layout = "_Layout";
}
@using PackerTracker.Models;

<h1>Packer Tracker</h1>
<ul>

  @if (Model.Count == 0)
  {
    <p>You have no items in your Bag</p>
  }
  @if (Model.Count != 0)
  {
    @foreach (BagItem item in Model)
    {

        <li><a href="/bag-items/@item.GetId()">@item.GetNameOfItem()</a></li>
        <li>@item.GetPrice()</li>
        <li>@item.GetWeight()</li>
        <li>@item.GetPacked()</li>
        <p>--------------</p>
      }
    }

  </ul>
  <a href="/bag-items/new">Add a new item.</a>

  <form action="/bag-items/delete" method="post">
    <button type="submit" name="button">Clear All item in the Bag</button>
  </form>
